{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch Electron (Dev)",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/electron",
      "windows": {
        "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/electron.cmd"
      },
      "runtimeArgs": [
        "--inspect=9229",
        "--remote-debugging-port=9223",
        "."
      ],
      "preLaunchTask": "dev:bootstrap",
      "outFiles": [
        "${workspaceFolder}/dist/electron/**/*.js"
      ],
      "console": "integratedTerminal"
    },
    {
      "name": "Electron: Renderer",
      "type": "chrome",
      "request": "attach",
      "port": 9223,
      "webRoot": "${workspaceFolder}",
      "timeout": 30000
    }
  ],
  "compounds": [
    {
      "name": "Electron: All",
      "configurations": [
        "Launch Electron (Dev)",
        "Electron: Renderer"
      ]
    }
  ]
}
